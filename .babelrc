{
  "presets": [
    "@babel/preset-typescript",
    [
      "@babel/preset-env",
      {
        "targets": { "node": "8" },
        "modules": false,
      }
    ]
  ],
  "generatorOpts": {
    "importAttributesKeyword": "with"
  },
  "ignore": ["node_modules"],
  "plugins": [
    "@babel/transform-class-properties",
    "@babel/transform-object-rest-spread"
  ]
}